<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-init-schema" author="paypulse">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="merchants"/>
            </not>
        </preConditions>
        <createTable tableName="merchants">
            <column name="merchant_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="merchant_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="merchant_email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="merchant_phone" type="VARCHAR(32)"/>
            <column name="status" type="VARCHAR(32)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
